{
    "compilerOptions": {
        "target": "es2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "#*": ["*"]
        },
        "allowImportingTsExtensions": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}
