{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "#api/*": ["api/*"],
            "#config/*": ["config/*"],
            "#postgres/*": ["postgres/*"],
            "#services/*": ["services/*"],
            "#types/*": ["types/*"],
            "#utils/*": ["utils/*"],
            "#secrets/*": ["secrets/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules"]
}
